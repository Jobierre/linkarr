# Linkarr Configuration
# Copy this file to config.env and fill in your values

# Sonarr Configuration
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your_sonarr_api_key_here

# Radarr Configuration
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your_radarr_api_key_here

# Paths (TRaSH standard structure)
# Downloads root directory
DOWNLOADS_PATH=/data/torrents

# Media root directory
MEDIA_PATH=/data/media

# Subdirectories (relative to above paths)
MOVIES_DOWNLOAD_SUBDIR=movies
TV_DOWNLOAD_SUBDIR=tv
MOVIES_MEDIA_SUBDIR=movies
TV_MEDIA_SUBDIR=tv

# Docker path mapping (if Sonarr/Radarr run in Docker)
# Maps container paths to host paths
# Format: CONTAINER_PATH:HOST_PATH
# Use specific mappings for movies and TV if they differ from container
DOCKER_PATH_MAP_MOVIES="/data/media/movies:/mnt/user/Media/01-Films"
DOCKER_PATH_MAP_TV="/data/media/tv:/mnt/user/Media/02 Series"
DOCKER_PATH_MAP_DOWNLOADS="/data/torrents:/mnt/user/Media/00 Torrent"

# Report settings
REPORT_DIR=./reports
VERBOSE=false
